info=/var/run/ipsec.info
me="ipsec showdefaults"

case "$1" in
--help)		echo "Usage: ipsec showdefaults" ; exit 0	;;
--version)	echo "$me $IPSEC_VERSION" ; exit 0	;;
esac

# Pick up the info.
if test -s $info
then
	sed '/^defaultroute/s/default//p' $info
	sed '/^#dr:/s/dr://p' $info
else
	echo "$me: cannot find defaults file \`$info'" >&2
	exit 1
fi
